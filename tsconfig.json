// ./tsconfig.json

{
    "files": [],
    "references": [{ "path": "./shuffrand" }, { "path": "./datrand" }],
    "compilerOptions": {
        "composite": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "shuffrand": ["./shuffrand"],
            "datrand": ["./datrand"]
        }
    },
    "include": ["shuffrand/src", "datrand/src"]
}

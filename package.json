{
    "//": "./package.json | The primary configuration of the monorepo",
    "name": "monorand",
    "private": true,
    "version": "0.9.3",
    "description": "The monorepo for the shuffrand-datrand ecosystem.",
    "scripts": {
        "build": "pnpm run clean && pnpm --filter shuffrand build && pnpm --filter datrand build",
        "build:shuffrand": "cross-env PACKAGE_NAME=shuffrand vite build",
        "build:datrand": "cross-env PACKAGE_NAME=datrand vite build",
        "test": "pnpm --recursive test",
        "clean": "node clean.mjs",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "benchmark": "pnpm --filter shuffrand benchmark",
        "test:full": "pnpm run test && pnpm run test:secondary",
        "preflight": "pnpm format && pnpm lint && pnpm build && pnpm test",
        "shuffrand": "pnpm --filter shuffrand",
        "datrand": "pnpm --filter datrand",
        "_test:secondary:run": "pnpm exec playwright test",
        "test:secondary": "pnpm run test:secondary:shuffrand && pnpm run test:secondary:datrand",
        "test:secondary:shuffrand": "cross-env PACKAGE_NAME=shuffrand pnpm run _test:secondary:run",
        "test:secondary:datrand": "cross-env PACKAGE_NAME=datrand pnpm run _test:secondary:run",
        "test:e2e": "pnpm run test:secondary",
        "test:regression": "pnpm run test:secondary",
        "test:enduser": "pnpm run test:secondary",
        "test:prod": "pnpm run test:secondary",
        "test:production": "pnpm run test:secondary",
        "_test:tertiary:run": "pnpm exec vitest bench --config=./vitest.benchmark.config.ts --run",
        "test:tertiary": "pnpm run test:tertiary:shuffrand && pnpm run test:tertiary:datrand",
        "test:tertiary:shuffrand": "cross-env PACKAGE_NAME=shuffrand pnpm run _test:tertiary:run",
        "test:tertiary:datrand": "cross-env PACKAGE_NAME=datrand pnpm run _test:tertiary:run",
        "test:benchmark": "pnpm run test:tertiary",
        "test:bench": "pnpm run test:tertiary",
        "test:bm": "pnpm run test:tertiary",
        "test:perf": "pnpm run test:tertiary",
        "test:perfbench": "pnpm run test:tertiary",
        "test:performance": "pnpm run test:tertiary",
        "test:timing": "pnpm run test:tertiary"
    },
    "keywords": [
        "monorepo",
        "monolithic",
        "shuffle",
        "random",
        "randomization",
        "utility",
        "typescript",
        "javascript",
        "array"
    ],
    "devDependencies": {
        "@biomejs/biome": "^2.1.4",
        "@playwright/test": "^1.54.2",
        "@types/node": "^24.2.1",
        "@vitest/browser": "4.0.0-beta.7",
        "cross-env": "^10.0.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.1.1",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "4.0.0-beta.7"
    }
}
